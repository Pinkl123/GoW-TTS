<Panel id="111"  position="0 0 0" rotation="0 0 0" height="100" width="825" scale="1 1" >
    <HorizontalLayout position="200 -1100 0"  height="900" width="800">
    <VerticalLayout >
    <Text fontSize="25" height="10" width="100" text="Тип"></Text>
    <Dropdown id="Type" onValueChanged="Type">
    <Option selected="true">Отрицательный</Option>
    <Option>Положительный</Option>
    <Option>Нейтральный</Option>
    </Dropdown>
    <Text fontSize="25" height="10" width="100" text="Вариативность"></Text>
    <Dropdown id="Var" onValueChanged="Var">
    <Option selected="true">Игрок</Option>
    <Option>Союзник</Option>
    <Option>Враг</Option>
    <Option>Все</Option>
    </Dropdown>
    <Text fontSize="25" height="10" width="100" text="Примерение"></Text>
    <Dropdown id="App" onValueChanged="App">
    <Option selected="true">Когда угодно</Option>
    <Option>Свой ход</Option>
    <Option>Ход союзника</Option>
    <Option>Ход противника</Option>
