    <Option>Кинжал</Option>
    <Option>Посох</Option>
    <Option>Щит</Option>
    </Dropdown>
    <Text fontSize="25" height="10" width="100" text="Модификатор"></Text>
    <Dropdown id="Mod" onValueChanged="Mod">
    <Option selected="true">Мгновенное</Option>
    <Option>Переодическое</Option>
    <Option>Аура</Option>
    </Dropdown>
    </VerticalLayout>
    <VerticalLayout >
    <Text fontSize="25" height="10" width="100"  text="Сила Заклинания"></Text>
    <InputField id="SPD" fontSize="45" onEndEdit="onEndEdit"
      text="1.0"></InputField>
    <Text fontSize="25" height="10" width="100" text="Переодический урон"></Text>
    <InputField id="PPD" fontSize="45" onEndEdit="onEndEdit"
      text="1.0"></InputField>
    <Text fontSize="25" height="10" width="90" text="Отложеность"></Text>
    <InputField id="Del" fontSize="45" onEndEdit="onEndEdit"
      text="1"></InputField>
    <Text fontSize="25" height="10" width="100" text="Дальность"></Text>
      <InputField id="Ran" fontSize="45" onEndEdit="onEndEdit"
        text="1"></InputField>
    <Text fontSize="25" height="10" width="100" text="Радиус"></Text>
    <InputField id="Rad" fontSize="45" onEndEdit="onEndEdit"
      text="1"></InputField>
    </VerticalLayout>
    <VerticalLayout >
    <Text fontSize="25" height="10" width="100" text="Стоимость"></Text>
    <InputField id="Cos" fontSize="45" onEndEdit="onEndEdit"
      text="1"></InputField>

    <Text fontSize="25" height="10" width="100" text="Время действия"></Text>
    <InputField id="ToA" fontSize="45" onEndEdit="onEndEdit"
      text="1"></InputField>
    <Text fontSize="25" height="10" width="100" text="Количество применения"></Text>
    <InputField id="NoA" fontSize="45" onEndEdit="onEndEdit"
      text="1"></InputField>

    <Text fontSize="25" height="10" width="100" text="Перезарядка"></Text>
    <InputField id="Cda" fontSize="45" onEndEdit="onEndEdit"
      text="1"></InputField>
    <Text fontSize="25" height="10" width="100" text="Школа"></Text>
    <Dropdown id="Soc" onValueChanged="Soc">
    <Option selected="true" >Пирокинетика</Option>
    <Option>Криомантия</Option>
    <Option>Воодушевление</Option>
    <Option>Мистицызм</Option>
    <Option>Геомантия</Option>
    <Option>Гармония</Option>
    <Option>Чаротворение</Option>
